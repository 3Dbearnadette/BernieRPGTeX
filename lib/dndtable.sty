% Table Header
\newcommand{\header}[1]{{
	\par\vspace*{8pt}
	\noindent
	\sffamily\bfseries\scshape
	#1}}

% Centered Column
\newcolumntype{Y}{>{\centering\arraybackslash}X}

% Table Environment
\NewDocumentEnvironment{dndtable}{O{XX} O{tablecolor}}{%
    \par\vspace*{8pt}
    \noindent
    \fontfamily{lmss}\selectfont
    \rowcolors{1}{}{#2}
    \tabularx{\linewidth}{#1}
  }{%
    \endtabularx
    \vspace{8pt plus 1pt}
    \noindent
  }

\newenvironment{dnditemtable}[1][XX]{%
    \PackageWarning{dnd}{dnditemtable is deprecated. Set tablecolor and use dndtable instead.}
    \par\vspace*{8pt}
    \noindent
    \fontfamily{lmss}\selectfont
    \rowcolors{1}{}{DmgCoral}
    \tabularx{\linewidth}{#1}
  }{%
    \endtabularx
    \vspace{8pt plus 1pt}
    \noindent
  }
